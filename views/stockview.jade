block variables
	title Stock | Stock View Page
extends layout
block content
	div.bodydiv
		br
		h2 Stock View Page
		br
		div#container.center(style='width:90%; height:600px;')
		br
		h2 Choose Stock View Period
		br
		div.modal#myModal
			div.modal-content2
				span.close x
				p#error.perror(style='padding: 20px; color: red;')
		form#formData
			//- label Date From: 
			//- input.queryDate(id='from' type='date' name='dateFrom')
			//- label Date To: 
			//- input.queryDate(id='to' type='date' name='dateTo')
			br
			label.queryPeriod 24 Hours 
				input(type='radio' name='periodQuery' value='d')
			label.queryPeriod Week 
				input(type='radio' name='periodQuery' value='w')
			label.queryPeriod Month 
				input(type='radio' name='periodQuery' value='m')
			label.queryPeriod 6 Month 
				input(type='radio' name='periodQuery' value='6m')
			label.queryPeriod Year 
				input(type='radio' name='periodQuery' value='y')
			label.queryPeriod 5 Year 
				input(type='radio' name='periodQuery' value='5y')
		button#button.btn Submit
		br
		div#stockCharts(style='padding-left:5%; padding-right:5%; padding-top:1%')


block logout
	a#logout(href='/users/logout') Logout
	a#logout(href='/stock/addStock') Add Stock
	a#logout(href='/stock/stocklist') List Stock
	a#logout(href='/stock/managemoney') Manage Money
	
